<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Odyssey</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>
				<TerrainDef ParentName="CoveredBridgeBase">
					<defName>CoveredHeavyBridge</defName>
					<label>covered heavy bridge</label>
