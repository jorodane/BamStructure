	<ThingDef ParentName="TinyBase" Name ="RecessedLight">
		<defName>RecessedLight</defName>
		<label>recessed light</label>
		<description>An ground mounted electrical lamp that lights an area. People need light to move and work at full speed.</description>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<rotatable>false</rotatable>
		<uiIconScale>4</uiIconScale>
		<uiIconOffset>(0, -0.1)</uiIconOffset>
		<uiOrder>2990</uiOrder>
		<statBases>
			<WorkToBuild>100</WorkToBuild>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>1</Mass>
			<Flammability>1.0</Flammability>
		</statBases>
		<researchPrerequisites>
			<li>Electricity</li>
		</researchPrerequisites>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costList>
			<Steel>1</Steel>
		</costList>
		<costStuffCount>1</costStuffCount>
		<graphicData>
			<texPath>Things/Building/Decoration/RecessedLight</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(0.2,0.2)</drawSize>
		</graphicData>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>4</basePowerConsumption>
				<powerUpgrades>
					<li>
						<researchProject>ColoredLights</researchProject>
						<factor>0.1</factor>
					</li>
				</powerUpgrades>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(214,148,94,0)</glowColor>
				<colorPickerEnabled>true</colorPickerEnabled>
				<darklightToggle>true</darklightToggle>
			</li>
		</comps>
	</ThingDef>

