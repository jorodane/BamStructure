<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase" Name="RoofBase" Abstract="True">
		<thingClass>RoofsOnRoofs.Building_Roof</thingClass>
		<category>Building</category>
		<altitudeLayer>FogOfWar</altitudeLayer>
		<passability>Standable</passability>
		<pathCost>0</pathCost>
		<coversFloor>false</coversFloor>
		<clearBuildingArea>false</clearBuildingArea>
		<noRightClickDraftAttack>true</noRightClickDraftAttack>
		<tickerType>Never</tickerType>
		<selectable>false</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<designationCategory>DesignationCategory_Roofs</designationCategory>
		<canOverlapZones>true</canOverlapZones>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToBuild>10</WorkToBuild>
			<Flammability>0.0</Flammability>
		</statBases>
		<building>
			<paintable>true</paintable>
			<isEdifice>false</isEdifice>
		</building>
		<placeWorkers>
			<li>RoofsOnRoofs.Placeworker_Roof</li>
		</placeWorkers>
	</ThingDef>

	<!-- Wall Side -->
		
	<ThingDef ParentName="RoofBase" Name="Roof_WallSide">
		<defName>Roof_WallSide</defName>
		<label>wall side</label>
		<uiOrder>1000</uiOrder>
		<altitudeLayer>VisEffects</altitudeLayer>
		<drawStyleCategory>Floors</drawStyleCategory>
		<replaceTags>
			<li>WallSide</li>
		</replaceTags>
		<graphicData>
			<texPath>Things/Building/Roof/Roof_WallSide</texPath>
			<graphicClass>RoofsOnRoofs.Graphic_Appearances_MultiColored</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Custom9</li>
			</linkFlags>
		</graphicData>
		<uiIconPath>Things/Building/Roof/Roof_WallSide/WallSmooth_MenuIcon</uiIconPath>
		<uiIconPathsStuff>
			<li>
				<appearance>Planks</appearance>
				<iconPath>Things/Building/Roof/Roof_WallSide/WallPlanks_MenuIcon</iconPath>
			</li>
			<li>
				<appearance>Bricks</appearance>
				<iconPath>Things/Building/Roof/Roof_WallSide/WallBricks_MenuIcon</iconPath>
			</li>
		</uiIconPathsStuff>
		<rotatable>false</rotatable>
		<costStuffCount>1</costStuffCount>
		<stuffCategories>
			<li>Woody</li>
			<li>Stony</li>
			<li>Metallic</li>
		</stuffCategories>
		<building>
			<blueprintGraphicData>
				<texPath>Things/Building/Roof/WallSide_Blueprint_Atlas</texPath>
			</blueprintGraphicData>
		</building>
	</ThingDef>
	
